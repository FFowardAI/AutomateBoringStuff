{
  "manifest_version": 3,
  "name": "Automate Boring Stuff",
  "version": "0.0.1",
  "description": "Make your life less boring",
  "action": {
    "default_popup": "dist/index.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "scripting",
    "storage",
    "desktopCapture",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8001/*",
    "https://5aca-4-39-199-2.ngrok-free.app/*"
  ],
  "background": {
    "service_worker": "dist/src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["/images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
