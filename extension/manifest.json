{
  "manifest_version": 3,
  "name": "Automate Boring Stuff",
  "version": "0.0.1",
  "description": "Make your life less boring",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "cookies",
    "scripting",
    "storage",
    "desktopCapture",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8001/*",
    "https://e77e-192-54-222-210.ngrok-free.app/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/src/background.js"
  },
  "side_panel": {
    "default_path": "dist/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}