{
  "manifest_version": 3,
  "name": "Automate Boring Stuff",
  "version": "0.0.1",
  "description": "Make your life less boring",
  "action": {
    "default_popup": "dist/index.html"
  },
  "permissions": [
    "activeTab",
    "desktopCapture",
    "tabs",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["/images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
